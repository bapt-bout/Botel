    {% block javascripts %}
    {% endblock %}
</head>

<body>
    <!-- Navbar -->
    <div class="hamburger">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
    </div>
    <div class="frontpage">

        <div class="navbar">

            <div id="logo1">

                <img src="../../assets/socials/logo.gif" alt="">
            </div>
            <ul id="navbarmain">
                <li>
                    <a href="{{ path('home') }}">Accueil</a>
                </li>
                <li>
                    <a href="{{ path('home') }}#about">A propos</a>
                </li>
                <li>
                    <a href="{{ path('home') }}#kitchen">Restaurant</a>
                </li>
                <li>
                    <a href="{{ path('app_chambre') }}">Chambres</a>
                </li>
                <li>
                    <a href="{{ path('home') }}#contact">Contactez-nous</a>
                </li>
                <li class="nav-item" >
                    <a class="nav-link btn btn-secondary position-relative" href=" {{ path('app_cart') }} ">Vos réservations
                    {% if app.session.get('qt') > 0 %}
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"> {{ app.session.get('qt') }}</span> 
                    {% endif %}
                    </a>
                </li>
                 {% if app.user %}
            <a href="{{ path('app_logout') }}" class="btn btn-danger ms-2">Déconnexion</a>
            <a href="{{ path('mon_compte_commandes') }}" class="btn btn-warning ms-2">Mon compte</a>
            </ul>
            {% endif %}


            <div class="social">

                <ul>
                    <li>
                        <a href="https://www.facebook.com/photo/?fbid=2949361445120628&set=a.111699598886841" target="_blank">

                            <img src="../../assets/socials/fb.png" alt="" id="fb">
                        </a>


                    </li>
                    <li>
                        <a href="https://www.instagram.com/" target="_blank">


                            <img src="../../assets/socials/ig.png" alt="" id="ig">
                        </a>
                    </li>
                    <li>
                        <a href="https://fr.linkedin.com/" target="_blank">

                            <img src="../../assets/socials/lnkd.png" alt="" id="lnkd">
                        </a>
                    </li>
                    <li>
                        <a href="https://github.com/bapt-bout?tab=repositories" target="_blank">

                            <img src="../../assets/socials/git.png" alt="" id="git">
                        </a>
                    </li>
                </ul>

              
            </div>
            

{% block body %}{% endblock %}
      
    </div>
