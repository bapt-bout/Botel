{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center" style="color: #000;">Connexion</h1>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% else %}
                <div class="mb-3">
                    <label for="inputEmail" class="form-label" style="color: #000;">Email</label>
                    <input type="email" id="inputEmail" name="email" class="form-control" required autofocus>
                </div>
                <div class="mb-3">
                    <label for="inputPassword" class="form-label" style="color: #000;">Mot de passe</label>
                    <input type="password" id="inputPassword" name="password" class="form-control" required>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-info">Se connecter</button>
                </div>
                <div>
                
                </div>
            {% endif %}
        </form>
    </div>
{% endblock %}
